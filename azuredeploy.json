{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "region": {
      "type": "string",
      "metadata": {
        "description": "Region to deploy resources to."
      }
    },
    "awsAccessKeyId": {
      "type": "securestring",
      "metadata": {
        "description": "Your AWS_ACCESS_KEY_ID"
      }
    },
    "awsSecretAccessKey": {
      "type": "securestring",
      "metadata": {
        "description": "Your AWS_SECRET_ACCESS_KEY"
      }
    },
    "awsRegion": {
      "type": "string",
      "metadata": {
        "description": "Your AWS_Region."
      }
    },
    "dynamodbTableName": {
      "type": "string",
      "metadata": {
        "description": "Your DynamoDB TableName."
      }
    },
    // "appPackageUri": {
    //   "type": "securestring",
    //   "metadata": {
    //     "description": "URI of the application package on storage account."
    //   }
    // },
    "appName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Function App."
      }
    }
  },

  "variables": {
    "functionAppname": "[parameters('appName')]"
  },

  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2019-08-01",
      "name": "[variables('functionAppName')]",
      "location": "[parameters('region')]",
      "kind": "functionapp",

      "properties": {
        "siteConfig": {
          "appSettings": {
            "AWS_ACCESS_KEY_ID": "[parameters('awsAccessKeyId')]",
            "AWS_SECRET_ACCESS_KEY": "[parameters('awsSecretAccessKey')]",
            "AWS_REGION": "[parameters('awsRegion')]",
            "DynamoDB_Table_Name": "[parameters('dynamodbTableName')]",
            // "WEBSITE_RUN_FROM_PACKAGE": "[parameters('appPackageUri')]"
          }
        }
      },

      "dependsOn": [],

      "resources": [
        {
          "name": "[variables('functionAppName')]",
          "type": "sourcecontrols",
          "apiVersion": "2019-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('functionAppName'))]"
          ],
          "properties": {
            "RepoUrl": "https://github.com/ios-x/testappdeploy",
            "branch": "main",
            "IsManualIntegration": false
          }
        }]
      }
    ]
}
